{
    "swagger": "2.0",
    "info": {
        "contact": {}
    },
    "paths": {
        "/files": {
            "post": {
                "description": "Uploads and saves a file in the storage system, including metadata and content.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "files"
                ],
                "summary": "Save a new file",
                "parameters": [
                    {
                        "description": "File metadata and content for saving",
                        "name": "file",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/contract.SaveFileRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "File saved successfully with unique ID and details",
                        "schema": {
                            "$ref": "#/definitions/contract.SaveFileResponse"
                        }
                    },
                    "400": {
                        "description": "Invalid request format or file data",
                        "schema": {
                            "$ref": "#/definitions/contract.SaveFileResponse"
                        }
                    },
                    "500": {
                        "description": "Server encountered an error during file save operation",
                        "schema": {
                            "$ref": "#/definitions/contract.SaveFileResponse"
                        }
                    }
                }
            }
        },
        "/files/delete": {
            "delete": {
                "description": "Deletes a file from storage by its unique ID. The file ID should be a valid identifier for an existing file.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "files"
                ],
                "summary": "Delete a file",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Unique File ID to be deleted",
                        "name": "fileId",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "File deletion was successful",
                        "schema": {
                            "$ref": "#/definitions/contract.DeleteFileResponse"
                        }
                    },
                    "400": {
                        "description": "Invalid request format or parameters",
                        "schema": {
                            "$ref": "#/definitions/contract.DeleteFileResponse"
                        }
                    },
                    "404": {
                        "description": "File not found with the given ID",
                        "schema": {
                            "$ref": "#/definitions/contract.DeleteFileResponse"
                        }
                    },
                    "500": {
                        "description": "Server encountered an error during file deletion",
                        "schema": {
                            "$ref": "#/definitions/contract.DeleteFileResponse"
                        }
                    }
                }
            }
        },
        "/files/get": {
            "get": {
                "description": "Retrieves a file from storage by its unique identifier. The ID should refer to a valid, stored file.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "files"
                ],
                "summary": "Get a file",
                "parameters": [
                    {
                        "type": "string",
                        "description": "File ID",
                        "name": "file_id",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Owner ID",
                        "name": "owner_id",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful retrieval of file details",
                        "schema": {
                            "$ref": "#/definitions/contract.GetFileResponse"
                        }
                    },
                    "400": {
                        "description": "Request contains invalid format or parameters",
                        "schema": {
                            "$ref": "#/definitions/contract.GetFileResponse"
                        }
                    },
                    "404": {
                        "description": "File not found with the given ID",
                        "schema": {
                            "$ref": "#/definitions/contract.GetFileResponse"
                        }
                    },
                    "500": {
                        "description": "Server encountered an error during file retrieval",
                        "schema": {
                            "$ref": "#/definitions/contract.GetFileResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "contract.DeleteFileResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                }
            }
        },
        "contract.GetFileResponse": {
            "type": "object",
            "properties": {
                "file": {
                    "type": "array",
                    "items": {
                        "type": "integer"
                    }
                },
                "message": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                }
            }
        },
        "contract.SaveFileRequest": {
            "type": "object",
            "properties": {
                "content": {
                    "type": "array",
                    "items": {
                        "type": "integer"
                    }
                },
                "file_name": {
                    "type": "string"
                },
                "owner_id": {
                    "type": "string"
                }
            }
        },
        "contract.SaveFileResponse": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                }
            }
        }
    }
}