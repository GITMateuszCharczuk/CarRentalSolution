                "file_id": {
                    "type": "string"
                },
                "owner_id": {
                    "type": "string"
                }
            }
        },
        "contract.DeleteFileResponse200": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "example": "File deleted successfully."
                },
                "title": {
                    "type": "string",
                    "example": "StatusOK"
                }
            }
        },
        "contract.DeleteFileResponse400": {
